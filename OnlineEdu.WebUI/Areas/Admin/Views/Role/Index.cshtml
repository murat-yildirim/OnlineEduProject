@model List<ResultRoleDto>
@{
    ViewData["Title"] = "Rol Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@{
	int count = 0;
}
<table class="table table-hover">
	<tr>
		<th>#</th>
		<th>Rol Adı</th>

	</tr>
	@foreach (var item in Model)
	{
		count++;
		<tr>
			<th>@count</th>
			<th>@item.Name</th>

			<td>
				<button onclick="deleteRole(@item.Id)" class="btn btn-outline-danger">Sil</button>
			</td>
		</tr>
	}
</table>
<br />
<a asp-action="CreateRole" asp-controller="Role" asp-area="Admin" class="btn btn-outline-primary">Yeni Rol Ekle</a>

<script>
	function deleteRole(id) {

		Swal.fire({
	  title: "Silmek İstediğinize Eminmisiniz ?",
	  text: "Bu İşlemi Geri Alamazsınız!",
	  icon: "warning",
	  showCancelButton: true,
	  confirmButtonColor: "#3085d6",
	  cancelButtonColor: "#d33",
	  confirmButtonText: "Evet, Sil !",
	  cancelButtonText: "İptal"
	}).then((result) => {
	  if (result.isConfirmed) {
		window.location.href="/Admin/Role/DeleteRole/"+id;
	  }
	});
	}

</script>

