@model List<ResultCourseVideoDto>
@{
    ViewData["Title"] = "Kurs Videoları";
    Layout = "~/Areas/Student/Views/StudentLayout/Index.cshtml";
}


<h2> Kurs Adı : <strong> @ViewBag.courseName</strong></h2>
<table class="table table-hover">
	<tr>
		<th>#</th>
		<th>Video</th>
	


		<th></th>

	</tr>
	@foreach (var item in Model)
	{
		
		<tr>
			<th>@item.VideoNumber</th>

			<th><iframe width="560" height="315" src="@item.VideoUrl" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" referrerpolicy="strict-origin-when-cross-origin" allowfullscreen></iframe></th>

			
		</tr>
	}
</table>
<br />
<a href ="/Student/CourseRegister/Index" class="btn btn-outline-primary">Kurslara Geri Dön</a>